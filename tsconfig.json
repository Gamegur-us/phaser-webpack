{
    "version": "1.5.0-beta",
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true
    },
    "filesGlob": [
        "./**/*.ts",
        "!./node_modules/**/*.ts"
    ],
    "files": [
        "./src/Game.ts",
        "./src/defs/definitions.d.ts",
        "./src/state/Boot.ts",
        "./src/state/Main.ts",
        "./src/state/Preload.ts"
    ],
    "compileOnSave": false
}
